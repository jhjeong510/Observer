.turnOffGroupEvent_btn{
    cursor: pointer;
    box-shadow: 1px 1px 3px 1px black;
    /* font-weight: bolder; */
    text-shadow: 1px 1px #000000;
    background: linear-gradient(129deg, #343434 30%, #7B7B7C, #3d3d3d);
    border: 1.5px solid #7d7c7c;
    color: white;
    width: 5rem;
    height: 1.85rem;
    border-radius: 2.5px;
    font-weight: bolder;
    font-size: 14px;
    border-radius: 2.5px;
    font-weight: bolder;
    width: 150px;
    height: 38px;
    line-height: 16.5px;
    margin-left: 10px;
    letter-spacing: 1px;
}

.turnOffGroupEvent_btn:hover {
    box-shadow: 0px 0px 2px 2.2px #a4b9c5;
    border: 1.5px solid #1e262a;
}

.turnOffGroupEvent_btn:active {
    outline: 0;
    outline-offset: 0;
    background: linear-gradient(133deg, #000000 -10%, #494848 30%, #787878 60%, #101010);
    text-shadow: 1px 1px #252525;
    border: 1.5px solid #0b0b0b;
    color: #b1b1b1;
    box-shadow: 0px 0px 2px 2.2px #4f4f4f;
}


.check_btn{
    cursor: pointer;
    background: linear-gradient(133deg, #424242 -10%, #c2c2c2 30%, #C2C2C3 60%, #424242);
    border: 1.5px solid #bbbaba;
    box-shadow: 1px 1px 5px 1px black;
    font-weight: 700;
    text-shadow: 1px 1px white;
    color: #0e0e0e;
    border-radius: 2.5px;
    width: 3rem;
    height: 1.8rem;
    /* /////////////////////////// */
}

.check_btn:hover {
    box-shadow: 0px 0px 2px 2.2px #a9c3d3;
    border: 1.5px solid #474646;
}

.check_btn:active {
    outline: 0;
    outline-offset: 0;
    background: linear-gradient(133deg, #000000 -10%, #494848 30%, #787878 60%, #101010);
    text-shadow: 1px 1px #252525;
    border: 1.5px solid #0b0b0b;
    box-shadow: 0px 0px 2px 2.2px #4f4f4f;
    color: #b1b1b1;
}


.close_btn{
    cursor: pointer;
    box-shadow: 1px 1px 3px 1px black;
    font-weight: 700;
    text-shadow: 1px 1px #000000;
    background: linear-gradient(129deg, #343434 30%, #7B7B7C, #3d3d3d);
    border: 1.5px solid #7d7c7c;
    color: white;
    border-radius: 2.5px;
     /* /////////////////////////// */
    width: 4.1rem;
    height: 1.8rem;
}

.close_btn:hover {
    box-shadow: 0px 0px 2px 2.2px #a4b9c5;
    border: 1.5px solid #1e262a;
}

.close_btn:active {
    outline: 0;
    outline-offset: 0;
    background: linear-gradient(133deg, #000000 -10%, #494848 30%, #787878 60%, #101010);
    text-shadow: 1px 1px #252525;
    border: 1.5px solid #0b0b0b;
    color: #b1b1b1;
    box-shadow: 0px 0px 2px 2.2px #4f4f4f;
}