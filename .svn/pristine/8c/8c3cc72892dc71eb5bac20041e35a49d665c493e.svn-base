.center{
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 99;
    background-color: black;
    overflow: hidden;
}

.mainContainer{
    display: flex;
    height: calc(100% - 200px);
    width: calc(100%);
}

.menuMapAddIcon,
.menuMapCameraContext,
.menuMapDoorContext,
.menuMapVitalsensorContext,
.menuMapGuardianliteContext,
.menuMapEbellContext {
	display: none;
	position: absolute;
	padding: 8px;
	width: 190px;
	background-color: #fff;
	color: #222;
	font-size: 13px;
	box-shadow: rgba(0, 0, 0, 0.2) 3px 3px 5px;
	box-sizing: border-box;
	border-radius: 5px;
}

.menuMapAddIcon button,
.menuMapCameraContext button,
.menuMapDoorContext button,
.menuMapVitalsensorContext button,
.menuMapGuardianliteContext button,
.menuMapEbellContext button {
	width: 100%;
	background-color: white;
	border: none;
	margin: 0;
	padding: 5px;
	vertical-align: baseline;
}

.menuMapAddIcon button:hover,
.menuMapCameraContext button:hover,
.menuMapDoorContext button:hover,
.menuMapVitalsensorContext button:hover,
.menuMapGuardianliteContext button:hover,
.menuMapEbellContext button:hover {
	cursor: pointer;
	background-color: #333;
	color: #eee;
}
