.filter_card {
    width: 87.45vw;
    display: flex;
    justify-content: center;
    margin-left: -32px;
    margin-top: -10px;
    background-color: #00000099;
}

.person_label {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    width: 3vw;
    font-weight: bold;
}

.person_input {
    border-radius: 5px;
    width: 8vw;
}

.inquiry_btn {
    cursor: pointer;
    margin-right: 1rem;
    background: linear-gradient(133deg, #424242 -10%, #c2c2c2 30%, #C2C2C3 60%, #424242);
    border: 1.5px solid #bbbaba;
    box-shadow: 1px 1px 5px 1px black;
    font-weight: bolder;
    text-shadow: 1px 1px white;
    color: #0e0e0e;
    border-radius: 2.5px;
    height: 37px;
    width: 50px;
    font-size: inherit;
    margin-top: 6px;
}

.inquiry_btn:hover {
    box-shadow: 0px 0px 2px 2.2px #a9c3d3;
    font-weight: bolder;
    border: 1.5px solid #474646;
}

.inquiry_btn:active {
    outline: 0;
    outline-offset: 0;
    background: linear-gradient(133deg, #000000 -10%, #494848 30%, #787878 60%, #101010);
    text-shadow: 1px 1px #252525;
    border: 1.5px solid #0b0b0b;
    box-shadow: 0px 0px 2px 2.2px #4f4f4f;
    color: #b1b1b1;
    font-weight: bolder;
}