.signBtn {
  color: #eae7e7;
  text-shadow: 1px 1px black;
  font-weight: 700;
  background: linear-gradient(129deg, #343434 30%, #7B7B7C, #3d3d3d);
  border: 1px solid #7d7c7c;
  width: 100%;
  padding: 0.5rem;
}

.signBtn:hover {
  box-shadow: 0px 0px 2px 2.2px #a4b9c5;
  border: 1.5px solid #1e262a;
  color: black;
}