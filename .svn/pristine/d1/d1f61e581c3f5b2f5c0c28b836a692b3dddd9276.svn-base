.add_btn {
  margin-right: 1rem;
  background: linear-gradient(133deg, #424242 -10%, #c2c2c2 30%, #C2C2C3 60%, #424242);
  border: 1.5px solid #bbbaba;
  box-shadow: 1px 1px 5px 1px black;
  font-weight: bolder;
  text-shadow: 1px 1px white;
  color: #0e0e0e;
  border-radius: 2.5px;
  padding: 0 0.8rem;
}

.add_btn:hover {
  box-shadow: 0px 0px 2px 2.2px #a9c3d3;
  font-weight: bolder;
  border: 1.5px solid #474646;
}

.add_btn:active {
  outline: 0;
  outline-offset: 0;
  background: linear-gradient(45deg, black, transparent);
  background: linear-gradient(133deg, #000000 -10%, #4c4c4c 30%, #818181 60%, #101010);
  text-shadow: 1px 1px #252525;
  border: 1.5px solid #0b0b0b;
  box-shadow: 0px 0px 2px 2.2px #4f4f4f;
  color: #b1b1b1;
}

.modify_btn {
  cursor: pointer;
