.detail_root {
	display: flex;
	/* justify-content: space-between; */
	height: 100%;
	width: 100%;
}

.crowd_density_camera_title {
	font-weight: 700;
	font-size: large;
	position: relative;
	border-radius: 6px;
	border: 1.2px solid transparent;
	background-origin: border-box;
	background-clip: content-box, border-box;
	background-image: linear-gradient(#4e4e4e, #000000), linear-gradient(208deg, #383838 10%, #b9b9b9 80%, #595757);
	padding: 0.25rem;
	background-clip: border-box;
	align-items: center;
	display: flex;
	justify-content: center;
	letter-spacing: 0.2rem;
	margin-bottom: 0;
}

.btn_menu {
	position: relative;
	width: 40%;
	margin: 0;
	margin-left: 0.5rem;
	display: flex;
	justify-content: space-around;
}

.name_edit_btn {
	font-size: 1.2rem;
	cursor: pointer;
	display: flex;
	align-items: center;
	transition: transform ease-in-out 200ms;
}

.delete_btn {
	font-size: 1.4rem;
	display: flex;
	cursor: pointer;
	align-items: center;
	transition: transform ease-in-out 200ms;
}

.name_edit_btn:hover {
	color: cornflowerblue;
	transform: scale(1.1);
}

.delete_btn:hover {
	color: cornflowerblue;
	transform: scale(1.1);
}