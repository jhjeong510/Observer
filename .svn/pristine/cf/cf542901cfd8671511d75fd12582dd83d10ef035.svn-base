import React from 'react';
import { Modal, Button } from 'react-bootstrap';

export default function ModalConfirm({ modalConfirm: { show, title, description, removeIdx }, handleConfirm, handleCancel }) {
  return <Modal show={show} centered>
    <Modal.Header>
      <Modal.Title>{title}</Modal.Title>
    </Modal.Header>
    <Modal.Body>{description}</Modal.Body>
    <Modal.Footer>
      <Button onClick={() => handleConfirm(removeIdx)}>
        예
      </Button>
      <Button onClick={handleCancel}>
        아니오
      </Button>
    </Modal.Footer>
  </Modal>
}